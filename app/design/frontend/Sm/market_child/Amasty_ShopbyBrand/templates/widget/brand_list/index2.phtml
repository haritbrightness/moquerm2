        <?php endif; ?>
        <div class="brand-images">
            <ul class="bare-list">
                <?php foreach ($items as $letters) : ?>

                    <?php foreach ($letters as $letter => $options) : ?>
                        <?php foreach ($options as $option) : ?>
                            <li class="brand-item" <?=
                                                                        /** @noEscape */
                                                                        $block->getTooltipAttribute($option) ?>>
                                <a href="<?= $block->escapeUrl($option['url']) ?>" class="item" title="<?= $block->escapeHtml($option['label']) ?>">
                                    <?php if ($option['img'] && $isShowImages) : ?>
                                        <div class="am-image-wrapper">
                                            <img class="ambrands-image" src="<?= $block->escapeUrl($option['img']) ?>" title="<?= $block->escapeHtml($option['alt']) ?>" alt="<?= $block->escapeHtml($option['alt']) ?>" />
                                        </div>
                                    <?php else : ?>
                                        <p class="label"><?= $block->escapeHtml($option['label']) ?></p>
