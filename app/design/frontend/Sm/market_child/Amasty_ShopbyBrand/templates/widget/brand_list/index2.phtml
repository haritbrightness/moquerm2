    <?php if ($items) : ?>
        <?php if ($isShowSearch || $isShowFilter) : ?>
            <div class="brands-filters">
                <?= $block->getSearchHtml(); ?>
                <?php if ($isShowFilter) : ?>
                    <div class="letters">
                        <div class="letters-box">
                            <a href="javascript:void(0)" class="letter -letter-all" data-ambrands-js="filter-letter" title="<?= $block->escapeHtml(__('All Brands')) ?>">
                                <?= $block->escapeHtml(__('All Brands')) ?>
                            </a>
                        </div>
                        <div class="letters-box">
                            <?php if ($filterDisplayAll) : ?>
                                <?php foreach (array_merge(range('A', 'Z'), ['#']) as $letter) : ?>
                                    <a href="javascript:void(0)" data-ambrands-js="filter-letter" class="letter <?= (!(in_array($letter, $brandLetters)))
                                                                                                                                        ? '-disabled'
                                                                                                                                        : 'letter-' . $block->escapeHtml($letter) ?>">
                                        <?= $block->escapeHtml($letter) ?></a>
                                <?php endforeach; ?>
                            <?php else : ?>
                                <?php foreach ($brandLetters as $letter) : ?>
                                    <a href="javascript:void(0)" data-ambrands-js="filter-letter" class="letter letter-<?= $block->escapeHtml($letter) ?>">
                                        <?= $block->escapeHtml($letter) ?>
                                    </a>
