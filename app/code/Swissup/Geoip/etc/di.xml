<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Magento\Customer\Block\Address\Edit" type="Swissup\Geoip\Block\Address\Edit"/>

    <type name="Magento\Tax\Model\TaxConfigProvider">
        <plugin name="swissup_geoip" type="Swissup\Geoip\Plugin\Model\TaxConfigProviderPlugin" sortOrder="10" />
    </type>
    <type name="Magento\Checkout\Block\Checkout\AttributeMerger">
        <plugin name="swissup_geoip" type="Swissup\Geoip\Plugin\Block\CheckoutAttributeMerger" />
    </type>

    <type name="Swissup\Geoip\Model\ProviderFactory">
        <arguments>
            <argument name="types" xsi:type="array">
                <item name="maxmind_database" xsi:type="array">
                    <item name="label" xsi:type="string">MaxMind Database</item>
                    <item name="class" xsi:type="string">Swissup\Geoip\Model\Provider\MaxmindDatabase</item>
                </item>
                <item name="maxmind_service" xsi:type="array">
                    <item name="label" xsi:type="string">MaxMind Service</item>
                    <item name="class" xsi:type="string">Swissup\Geoip\Model\Provider\MaxmindService</item>
                </item>
                <item name="ipstack" xsi:type="array">
                    <item name="label" xsi:type="string">IpStack</item>
                    <item name="class" xsi:type="string">Swissup\Geoip\Model\Provider\Ipstack</item>
                </item>
            </argument>
        </arguments>
    </type>
</config>
